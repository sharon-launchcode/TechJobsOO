@model TechJobs.ViewModels.JobFieldsViewModel
@{
    // TODO #2.1- declare the ViewModel (outside of this @{ } block)
}
<h3>@Model.Columns.Count Result(s)</h3>
<table class="job-listing">
    @foreach (var fieldtype in Model.Columns)
    {
        // TODO #2.2 - display the job fields, one per row (outside of this @{ } block)
        <tr>
            <td>Name</td>
            <<td>fieldtype.Name</td>
        </tr>
        <tr>
            <td>Employer</td>
            <td>fieldtype.Employer</td>
        </tr>
        <tr>
            <td>Location</td>
            <td>fieldtype.Location</td>
        </tr>
        <tr>
            <td>Skill</td>
            <td>fieldtype.CoreCompetency</td>
        </tr>
        <tr>
            <td>Position Type</td>
            <td>fieldtype.PositionType</td>
        </tr>
    }
</table>